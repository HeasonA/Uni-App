
.swiper-container {
		width: 100%;
		padding-bottom: 20px;
}
.swiper-image {
		width: 100%;
		display: block;
}
.scroll-item {
		position: relative;
		border-radius: 10px;
		background-image: url('../../../static/地图.png');
		background-size: cover;
		background-repeat: no-repeat;
		display: inline-block;
		width: 50px;
		height: 50px;
		padding: 50px;
		margin-top: 10px;
		margin-right: 10px;
		margin-left: 25px;
		background-color: #5500ff;
		text-align: center;
}
